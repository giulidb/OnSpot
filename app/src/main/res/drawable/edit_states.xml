<?xml version="1.0" encoding="utf-8"?>

    <!-- oval background of the edit icon in modify profile photo -->
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape android:shape="oval" android:padding="10dp" >
                <solid android:color="#B9453F" />
                <stroke android:width="1dp" android:color="#B9453F" />
            </shape>
        </item>
        <item>
            <shape android:shape="oval" android:padding="10dp">
                <solid android:color="#C45852"/>
                <stroke android:width="0.5dp" android:color="#C45852" />
            </shape>
        </item>
    </selector>