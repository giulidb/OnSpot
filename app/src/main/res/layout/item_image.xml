<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="12dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/colorAccent" >

            <ImageView
                android:id="@+id/image_category"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginEnd="6dip" />

            <TextView
                android:id="@+id/text_category"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/image_category"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/headline"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/image_category"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="12sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:contentDescription="@string/image"
            android:layout_height="160dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:layout_below="@id/title_layout"/>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="@string/image"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:drawableStart="@drawable/play"
            android:id="@+id/play"
            android:clickable="true"
            android:onClick="reproduce_media"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.ActionButton" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription="@string/image"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:drawableStart="@drawable/volume"
            android:id="@+id/audio"
            android:clickable="true"
            android:onClick="reproduce_media"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            style="@style/Widget.AppCompat.ActionButton" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_below="@id/description">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_user"
                android:layout_width="50dp"
                android:contentDescription="@string/image"
                android:layout_height="50dp"
                android:layout_marginStart="6dip"
                />

                <TextView
                    android:id="@+id/text_user"
                    android:layout_width="wrap_content"
                    android:layout_height="26dip"
                    android:layout_gravity="center_vertical"
                    android:padding="5dp"
                    android:textSize="12sp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/heart_image"
                android:contentDescription="@string/image"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginStart="10dip"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/heart_number"
                android:layout_width="wrap_content"
                android:layout_height="26dip"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@id/heart_image"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="12sp" />


        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>